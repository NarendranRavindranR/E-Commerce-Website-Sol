@model List<Customer>
<div class="container-fluid px-4">
    <h2 class="mt-2 text-center text-uppercase fw-bold" style="letter-spacing:2px">All Customer</h2>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Customer Name</th>
                    <th>Customer Phone</th>
                    <th>Customer Email</th>
                    <th>Customer City</th>
                    <th>Customer Address</th>
                    <th>Others</th>
                </tr>  
            </thead>
            <tbody>
                @foreach (var cust in Model)
                {
                     <tr>
                        <td>@cust.customer_name</td>
                        <td>@cust.customer_phone</td>
                        <td>@cust.customer_email</td>
                        <td>@cust.customer_city</td>
                        <td>@cust.customer_address</td>
                        <td>
                            <div class="btn-group" role="group">
                                @*<a href="@Url.Action("customerDetails","Admin",new{id=cust.customer_id})" class="btn btn-primary">View Details</a>*@
                                <a href="@Url.Action("updateCustomer","Admin",new{id=cust.customer_id})" class="btn btn-warning" data-bs-toggle="tooltip" title="Edit Category"><i class="fas fa-edit"></i></a>
                                <a href="@Url.Action("deletePermission","Admin",new{id=cust.customer_id})" class="btn btn-danger" data-bs-toggle="tooltip" title="Delete Category"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr> 
                }  
            </tbody>
        </table>
    </div>
</div>
