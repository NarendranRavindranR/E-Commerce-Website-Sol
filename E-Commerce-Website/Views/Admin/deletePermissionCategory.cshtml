<div class="container-fluid px-4">
    <h2 class="custom-delete-heading text-center">Confirm Category Deletion</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <ul class="custom-delete-list">
            <li>
                <span class="custom-delete-label">Category ID:</span> @Model.category_id
            </li>
            <li>
                <span class="custom-delete-label">Category Name:</span> @Model.category_name
            </li>
        </ul>
        <div class="text-center mt-4">
            <button class="custom-delete-cancel-btn" onclick="window.history.back()">Cancel</button>
            <a href="@Url.Action("deleteCategory", "Admin", new { id = Model.category_id })" class="custom-delete-btn">Delete</a>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>