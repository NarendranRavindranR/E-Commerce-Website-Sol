@model List<Product>
<div class="container-fluid px-4">
    <h2 class="mt-2 text-center text-uppercase fw-bold" style="letter-spacing:2px">All Product</h2>
</div>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="col-md-12 text-end mb-3">
            <a href="@Url.Action("addProduct","Admin")" data-bs-toggle="tooltip" title="Add New Product">
                <i class="fas fa-plus-circle me-2 fa-3x custom-a"></i>
            </a>
        </div>
        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Product Image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prod in Model)
                {
                    <tr>
                        <td>@prod.product_name</td>
                        <td>@prod.product_price</td>
                        <td> <img src="@("~/product_images/"+prod.product_Image)" asp-append-version="true" width="40px" height="40px" /></td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("updateProduct","Admin",new{id=prod.product_id})" data-bs-toggle="tooltip" title="Edit Product"><i class="fas fa-pen custom-edit-icon"></i></a>
                                <a href="@Url.Action("deletePermissionProduct","Admin",new{id=prod.product_id})" data-bs-toggle="tooltip" title="Delete Product"><i class="fas fa-trash custom-delete-icon"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-1"></div>
</div>











