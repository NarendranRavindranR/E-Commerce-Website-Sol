<div class="container-fluid px-4">
    <h2 class="mt-2 text-center text-uppercase fw-bold add-product-heading">
        Add New Product
    </h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form method="post" enctype="multipart/form-data" class="add-product-form shadow p-4 bg-white rounded">

                    <!-- Product Name -->
                    <div class="add-product-form-group mb-3">
                        <label for="product_name" class="add-product-label fw-bold">Product Name</label>
                        <input class="add-product-input w-100"
                               type="text"
                               id="product_name"
                               name="product_name"
                               placeholder="Enter Product Name"
                               required />
                    </div>

                    <!-- Product Rating -->
                    <div class="add-product-form-group mb-3">
                        <label for="Rating" class="add-product-label fw-bold">Product Rating</label>
                        <input class="add-product-input w-100"
                               type="text"
                               id="Rating"
                               name="Rating"
                               placeholder="Enter Rating"
                               required />
                    </div>

                    <!-- Product Price -->
                    <div class="add-product-form-group mb-3">
                        <label for="product_price" class="add-product-label fw-bold">Product Price</label>
                        <input class="add-product-input w-100"
                               type="text"
                               id="product_price"
                               name="product_price"
                               placeholder="Enter Product Price"
                               required />
                    </div>

                    <!-- Stock Quantity -->
                    <div class="add-product-form-group mb-3">
                        <label for="stock_quantity" class="add-product-label fw-bold">Stock Quantity</label>
                        <input class="add-product-input w-100"
                               type="number"
                               id="stock_quantity"
                               name="stock_quantity"
                               value="@Model.stock_quantity"
                               placeholder="Stock Quantity"
                               required />
                    </div>


                   
                    <!-- Product Description -->
                    <div class="add-product-form-group mb-3">
                        <label for="product_description" class="add-product-label fw-bold">Product Description</label>
                        <textarea class="add-product-input w-100"
                                  id="product_description"
                                  name="product_Description"
                                  placeholder="Enter Product Description"
                                  rows="4"
                                  style="resize: none;"
                                  required></textarea>
                    </div>

                    <!-- Product Image -->
                    <div class="add-product-form-group mb-3">
                        <label for="product_image" class="add-product-label fw-bold">Product Image</label>
                        <input class="add-product-input w-100"
                               type="file"
                               id="product_image"
                               name="product_Image"
                               accept="image/*"
                               required />
                    </div>

                    <!-- Category Dropdown -->
                    <div class="add-product-form-group mb-3">
                        <label for="product_category" class="add-product-label fw-bold">Product Category</label>
                        @Html.Partial("CategoryDropdown", ViewData["categories"])
                    </div>

                    <!-- Submit and Cancel Buttons -->
                    <div class="form-group text-center mt-4">
                        <button type="button"
                                class="btn btn-secondary btn-sm cancel-button me-2"
                                onclick="window.history.back()">
                            Cancel
                        </button>
                        <input type="submit"
                               value="Submit"
                               class="btn btn-primary btn-sm add-product-button" />
                    </div>
                </form>
             </div>
         </div>
     </div>
    <div class="col-md-8"></div>
</div>










