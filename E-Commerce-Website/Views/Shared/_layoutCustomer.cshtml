<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My E-Commerce Site</title>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <link href="~/CustomerWebsite/Styles.css" rel="stylesheet" />

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header Section -->
    <header>
        <!-- Top Row: Logo, Search Box, Links, Icons -->
        <div class="bg-light border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Empty Column for Spacing -->
                    <div class="col-1"></div>
                    <!-- Logo -->
                    <div class="col-2    text-lg-center">
                        <img src="/Customer_Logo_Image/logo-colour.svg" alt="Logo" class="img-fluid">
                    </div>
                    <!-- Search Box -->
                    <div class="col-3" >
                        <input type="text" class="form-control" placeholder="Search for products...">
                    </div>
                    <!-- Navigation Links -->
                    <div class="col-4 text-center">
                        <nav class="d-flex justify-content-around">
                            <a href="/" class="text-dark">Home</a>
                            <a href="/about" class="text-dark">About Us</a>
@*                             <a href="/products" class="text-dark">Products</a>
 *@                         <a href="@Url.Action("ProductListPage","Customer")" data-bs-toggle="tooltip" title="Product Page" style="color:black">Products</a>
                            <a href="/blog" class="text-dark">Blog</a>
                            <a href="/contact" class="text-dark">Contact Us</a>
                        </nav>
                    </div>
                    <!-- Account and Cart Icons -->
                    <div class="col-2 text-end">
                        <a href="/account" class="text-dark mx-2"><i class="fas fa-user"></i></a>
                        <a href="/cart" class="text-dark mx-2"><i class="fas fa-shopping-cart"></i></a>
                    </div>
                    <!-- Empty Column for Spacing -->
                    <div class="col-1"></div>
                </div>
            </div>
        </div>

        <!-- Second Row: Category Icons -->
        <div class="bg-black py-2">
            <div class="container">
                <div class="row text-center text-white">
                    <div class="col">
                        <i class="fas fa-phone fa-lg"></i>
                        <p class="m-0 small">Phone</p>
                    </div>
                    <div class="col">
                        <i class="fas fa-desktop fa-lg"></i>
                        <p class="m-0 small">Computer</p>
                    </div>
                    <div class="col">
                        <i class="fas fa-clock fa-lg"></i>
                        <p class="m-0 small">Smart Watch</p>
                    </div>
                    <div class="col">
                        <i class="fas fa-camera fa-lg"></i>
                        <p class="m-0 small">Camera</p>
                    </div>
                    <div class="col">
                        <i class="fas fa-headphones fa-lg"></i>
                        <p class="m-0 small">Headphones</p>
                    </div>
                    <div class="col">
                        <i class="fas fa-gamepad fa-lg"></i>
                        <p class="m-0 small">Gaming</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content Placeholder -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer Section -->
    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <p>&copy; 2025 My E-Commerce Site. All rights reserved.</p>
        </div>
    </footer>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/CustomerJs/scripts.js"></script>
</body>
</html>
