
@{
    ViewData["Title"] = "productDetailPage";
    Layout = "~/Views/Shared/_layoutCustomer.cshtml";
}

@* @model E_Commerce_Website.Models.ProductListViewModel *@

@model E_Commerce_Website.Models.Product

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Section 1: Sidebar -->
        <div class=" col-md-6 text-center">
            <div class="p-sticky">
                <img src="/product_images/@Model.product_Image" alt="@Model.product_name" class="img-fluid" />
            </div>
         
        </div>

        <!-- Section 2: Product Details -->

        <div class="col-md-6">
            <div class="product-info-main">
                @* <h1>@Model.product_name</h1> *@
                <h2 class="product-name mt-2" itemprop="name">
                    @Model.product_name
                </h2>
                <div class="ratings mt-2">
                    <span class="text-warning">
                        @for (int i = 0; i < Math.Floor(Model.Rating ?? 0); i++)
                        {
                            <i class="fa fa-star"></i>
                        }
                        @if ((Model.Rating ?? 0) % 1 != 0)
                        {
                            <i class="fa fa-star-half-alt"></i>
                        }
                    </span>
                 </div>
                <div class="price mt-3">
                        <span >₹@Model.product_price</span>
                 </div>
                    
                    <!-- Product Availability -->
                    <p>
                        <strong>Availability:</strong>
                        @if (ViewBag.IsAvailable)
                        {
                            <span class="success text-success">In Stock</span>
                        }
                        else
                        {
                            <span class="text-danger">Out of Stock</span>
                        }
                    </p>

                    <!-- Quantity Selection -->
                    @if (ViewBag.IsAvailable)
                    {
                        <div class="quantity mt-4">
                            <label for="quantity">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" class="form-control w-25" value="1" min="1" max="@Model.stock_quantity">
                        </div>

                        <!-- Add to Cart and Checkout Buttons -->
                        <button class="btn btn-primary mt-3">Add to Cart</button>
                        <button class="btn btn-success mt-3 ms-2">Proceed to Checkout</button>
                    }
                
            </div>
        </div>
    </div>
</div>

